package com.pluralsight.model;

import java.sql.Time;
import java.util.Date;

public class FlightsReport {

	private String departure;
	private String arrival;
	private int miles;
	private Date flight_date;
	private Time departure_time;
	private Time arrival_time;
	private Time duration;
	private int vacancy;
	private int price;

	public FlightsReport(Airport dep, Airport arr, int miles, Date flight_date, Date depa) {
		this.departure = dep.getAirport_id();
		this.arrival = arr.getAirport_id();
		this.departure_time = new Time(depa);
	}
	
	public FlightsReport(String departure, String arrival, int miles, Date flight_date, Time departure_time,
			Time arrival_time, int vacancy, int price) {
		this.departure = departure;
		this.arrival = arrival;
		this.miles = miles;
		this.flight_date = flight_date;
		this.departure_time = departure_time;
		this.arrival_time = arrival_time;
		setDuration();
		this.vacancy = vacancy;
		this.price = price;
	}

	public String getArrival() {
		return arrival;
	}

	public Time getArrival_time() {
		return arrival_time;
	}

	public String getDeparture() {
		return departure;
	}

	public Time getDeparture_time() {
		return departure_time;
	}

	public Time getDuration() {
		return duration;
	}

	public Date getFlight_date() {
		return flight_date;
	}

	public int getMiles() {
		return miles;
	}

	public int getPrice() {
		return price;
	}

	public int getVacancy() {
		return vacancy;
	}

	public void setArrival(String arrival) {
		this.arrival = arrival;
	}

	public void setArrival_time(Time arrival_time) {
		this.arrival_time = arrival_time;
	}

	public void setDeparture(String departure) {
		this.departure = departure;
	}

	public void setDeparture_time(Time departure_time) {
		this.departure_time = departure_time;
	}

	public void setDuration() {
		long diff = arrival_time.getTime() - departure_time.getTime();
		this.duration = new Time(diff);
	}

	public void setFlight_date(Date flight_date) {
		this.flight_date = flight_date;
	}

	public void setMiles(int miles) {
		this.miles = miles;
	}

	public void setPrice(int price) {
		this.price = price;
	}

	public void setVacancy(int vacancy) {
		this.vacancy = vacancy;
	}

}
